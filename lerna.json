{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "version": "1.1.0",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "createRelease": "github"
    }
  },
  "packages": [
    "."
  ],
  "ignoreChanges": [
    "**/*.md"
  ]
}
